@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="container py-5 text-center bg-light rounded-3 shadow-sm">
    <h1 class="display-4 fw-bold text-primary">Welcome to MorphyWallet</h1>
    <p class="lead mt-3 text-dark">India’s reliable, secure, and fast wallet solution — built using ASP.NET Core MVC 8.0</p>
    <a class="btn btn-outline-primary btn-lg mt-3 px-5" href="/Wallets/Catalogue">🚀 Explore Wallet Plans</a>
</div>

<!-- Features Section -->
<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3 fs-1 text-success"><i class="bi bi-shield-lock"></i></div>
                    <h5 class="card-title">🔐 Secure Payments</h5>
                    <p class="card-text">All transactions are encrypted using modern security standards to protect your data and money.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3 fs-1 text-warning"><i class="bi bi-wallet2"></i></div>
                    <h5 class="card-title">💼 Easy Wallet Management</h5>
                    <p class="card-text">Manage wallet balances, plans, and user profiles with just a few clicks.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3 fs-1 text-info"><i class="bi bi-person-check"></i></div>
                    <h5 class="card-title">🛂 Admin & Guest Roles</h5>
                    <p class="card-text">Role-based access allows secure administration and smooth user viewing experience.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer Info -->
<div class="container text-center mt-5 mb-4">
    <p class="text-muted small">Developed by <strong>Morphy Pvt. Ltd.</strong> | Headquartered in Jodhpur, Rajasthan, India 🇮🇳</p>
</div>
