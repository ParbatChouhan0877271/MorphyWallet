@model IEnumerable<MorphyWallet.Models.Wallet>

@{
    ViewData["Title"] = "Product Catalogue";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">💼 Wallet Plans Catalogue</h2>
        <p class="text-muted">Explore subscription options for Indian financial users</p>
        <a asp-action="Create" class="btn btn-success btn-lg mt-3">+ Add New Plan</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Plan Name</th>
                        <th>Balance (₹)</th>
                        <th>Limit (₹)</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="fw-semibold">@item.PlanName</td>
                            <td>₹@item.Balance.ToString("N2")</td>
                            <td>₹@item.Limit.ToString("N2")</td>
                            <td>@item.Description</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success px-3 py-2">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary px-3 py-2">Inactive</span>
                                }
                            </td>
                            <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4" role="alert">
            No wallet plans available. Click "Add New Plan" to create one.
        </div>
    }
</div>
