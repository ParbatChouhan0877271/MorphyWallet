@model MorphyWallet.Models.Wallet

@{
    ViewData["Title"] = "Wallet Details";
}

<div class="container mt-5">
    <h2 class="mb-4">Wallet Plan Details</h2>
    <dl class="row">
        <dt class="col-sm-3">User ID</dt>
        <dd class="col-sm-9">@Model.UserId</dd>

        <dt class="col-sm-3">Plan Name</dt>
        <dd class="col-sm-9">@Model.PlanName</dd>

        <dt class="col-sm-3">Balance (₹)</dt>
        <dd class="col-sm-9">@Model.Balance</dd>

        <dt class="col-sm-3">Monthly Limit (₹)</dt>
        <dd class="col-sm-9">@Model.Limit</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-danger">Inactive</span>
            }
        </dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
